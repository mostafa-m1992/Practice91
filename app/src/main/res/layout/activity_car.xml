<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Car">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons">

        <Button
            android:text="Car One"
            android:id="@+id/carOne"
            style="@style/PersonalStyle1"/>

        <Button
            android:text="Car Tow"
            android:id="@+id/carTwo"
            style="@style/PersonalStyle1" />

        <Button
            android:text="Car Three"
            android:id="@+id/carThree"
            style="@style/PersonalStyle1" />

        <Button
            android:text="Car Four"
            android:id="@+id/carFour"
            style="@style/PersonalStyle1" />

        <Button
            android:text="Car Five"
            android:id="@+id/carFive"
            style="@style/PersonalStyle1" />

        <Button
            android:text="Car Six"
            android:id="@+id/carSix"
            style="@style/PersonalStyle1" />

        <Button
            android:text="Car Seven"
            android:id="@+id/carSeven"
            style="@style/PersonalStyle1" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        android:layout_toRightOf="@id/buttons"/>

</RelativeLayout>